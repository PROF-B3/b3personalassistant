# B3PersonalAssistant Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=sqlite:///databases/b3_assistant.db
DATABASE_ECHO=false

# AI Model Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2048

# OpenAI Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# System Configuration
DEBUG_MODE=false
LOG_LEVEL=INFO
DATA_DIR=data
MAX_MEMORY_MB=2048
MAX_CPU_PERCENT=80
MAX_CONCURRENT_TASKS=5

# Video Processing Configuration
VIDEO_SEGMENT_DURATION=60
VIDEO_FPS=30
VIDEO_RESOLUTION=1920x1080
VIDEO_EXPORT_FORMAT=mp4
VIDEO_QUALITY=high

# Security Configuration
SECRET_KEY=your_secret_key_here_change_this_in_production
ENCRYPTION_KEY=your_encryption_key_here_change_this_in_production

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_INTERVAL_SECONDS=300
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=60

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# External APIs (optional)
WEATHER_API_KEY=your_weather_api_key_here
NEWS_API_KEY=your_news_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# User Interface Configuration
GUI_THEME=retro
GUI_FONT_FAMILY=Consolas
GUI_FONT_SIZE=12
GUI_WINDOW_WIDTH=1200
GUI_WINDOW_HEIGHT=800

# Development Configuration
TESTING_MODE=false
MOCK_AI_RESPONSES=false
SKIP_VIDEO_PROCESSING=false 