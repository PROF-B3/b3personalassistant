# ==============================================================================
# B3PersonalAssistant Environment Configuration
# ==============================================================================
# Copy this file to .env and configure your settings
# DO NOT commit .env file with sensitive data!

# ==============================================================================
# Database Configuration
# ==============================================================================
B3_DATABASE_PATH=databases
# Path where SQLite databases will be stored

# ==============================================================================
# Knowledge Management
# ==============================================================================
B3_ZETTELKASTEN_PATH=knowledge_base
# Base path for Zettelkasten note storage

# ==============================================================================
# Logging Configuration
# ==============================================================================
B3_LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

B3_LOG_FILE=logs/b3assistant.log
# Path to log file (optional, logs to console if not set)

# ==============================================================================
# AI Model Configuration
# ==============================================================================
# Ollama settings
OLLAMA_HOST=http://localhost:11434
# Ollama server address

# OpenAI (optional)
# B3_OPENAI_API_KEY=your-openai-api-key-here
# Only needed if using OpenAI models

# Anthropic Claude (optional)
# B3_ANTHROPIC_API_KEY=your-anthropic-api-key-here
# Only needed if using Anthropic models

# Google AI (optional)
# B3_GOOGLE_API_KEY=your-google-api-key-here
# Only needed if using Google AI models

# ==============================================================================
# External Services (optional)
# ==============================================================================
# Weather API
# B3_WEATHER_API_KEY=your-weather-api-key
# For weather integration features

# News API
# B3_NEWS_API_KEY=your-news-api-key
# For news aggregation features

# ==============================================================================
# Performance Configuration
# ==============================================================================
B3_MAX_CONCURRENT_AGENTS=7
# Maximum number of agents that can run concurrently

B3_ENABLE_PERFORMANCE_MONITORING=true
# Enable performance metrics collection

B3_SLOW_OPERATION_THRESHOLD_MS=1000
# Threshold for logging slow operations (milliseconds)

# ==============================================================================
# Security Configuration
# ==============================================================================
B3_MAX_INPUT_LENGTH=10000
# Maximum allowed input length (characters)

B3_ENABLE_INPUT_VALIDATION=true
# Enable strict input validation

B3_ENABLE_RATE_LIMITING=false
# Enable rate limiting (future feature)

# ==============================================================================
# Development Settings
# ==============================================================================
B3_DEBUG_MODE=false
# Enable debug mode (more verbose logging, error details)

B3_ENABLE_HOT_RELOAD=false
# Enable hot reloading for development (future feature)

# ==============================================================================
# UI Configuration
# ==============================================================================
B3_THEME=dark
# Options: dark, light, retro, modern

B3_WINDOW_WIDTH=1400
# Default window width for desktop app

B3_WINDOW_HEIGHT=900
# Default window height for desktop app

# ==============================================================================
# Testing Configuration
# ==============================================================================
B3_TEST_DATABASE_PATH=databases/test
# Separate database path for tests

B3_SKIP_OLLAMA_TESTS=false
# Skip tests that require Ollama to be running

# ==============================================================================
# Backup Configuration
# ==============================================================================
B3_BACKUP_DIR=backups
# Directory for automated backups

B3_ENABLE_AUTO_BACKUP=true
# Enable automatic backups

B3_BACKUP_RETENTION_DAYS=30
# Number of days to keep backups

# ==============================================================================
# Advanced Configuration
# ==============================================================================
B3_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
# Number of failures before circuit breaker opens

B3_RETRY_MAX_ATTEMPTS=3
# Maximum retry attempts for failed operations

B3_REQUEST_TIMEOUT_SECONDS=120
# Default timeout for external requests

# ==============================================================================
# Feature Flags
# ==============================================================================
B3_ENABLE_VIDEO_PROCESSING=true
# Enable video processing features

B3_ENABLE_ACADEMIC_SEARCH=true
# Enable academic paper search

B3_ENABLE_CITATION_MANAGER=true
# Enable citation management features

B3_ENABLE_TASK_OPTIMIZATION=true
# Enable AI-powered task optimization

# ==============================================================================
# Notes
# ==============================================================================
# - All paths are relative to the project root unless absolute paths are used
# - Boolean values: true/false (case insensitive)
# - API keys should never be committed to version control
# - See documentation for more configuration options
